# =============================================================================
# Phase III Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# -----------------------------------------------------------------------------
# Database Configuration (REQUIRED)
# -----------------------------------------------------------------------------
# PostgreSQL connection string for Neon Serverless or any PostgreSQL 14+
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/dbname?ssl=require

# Test database (optional, for running tests)
TEST_DATABASE_URL=postgresql+asyncpg://user:password@host:5432/test_dbname

# -----------------------------------------------------------------------------
# Authentication (REQUIRED)
# -----------------------------------------------------------------------------
# Better Auth secret key (must be at least 32 characters)
BETTER_AUTH_SECRET=your-better-auth-secret-key-at-least-32-characters-long

# -----------------------------------------------------------------------------
# AI Service (REQUIRED)
# -----------------------------------------------------------------------------
# Google Gemini API key from https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------
# Allowed origins for cross-origin requests (JSON array format)
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://localhost:3001", "http://127.0.0.1:3001", "http://localhost:8000", "http://127.0.0.1:8000"]

# -----------------------------------------------------------------------------
# Environment
# -----------------------------------------------------------------------------
ENVIRONMENT=development




# Database Connection Pool Settings
DB_POOL_MIN=5
DB_POOL_MAX=10

# JWT Cache Configuration
JWT_CACHE_SIZE=1000
JWT_CACHE_TTL=300

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8000
