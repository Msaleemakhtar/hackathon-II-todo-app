{
  "name": "list_tasks",
  "description": "Retrieve all tasks for the authenticated user with optional status filter",
  "inputSchema": {
    "type": "object",
    "properties": {
      "user_id": {
        "type": "string",
        "description": "User ID from authenticated JWT token (not from user input)"
      },
      "status": {
        "type": "string",
        "enum": ["all", "pending", "completed"],
        "default": "all",
        "description": "Filter tasks by status (default: all)"
      }
    },
    "required": ["user_id"],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "tasks": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "Task ID"
            },
            "user_id": {
              "type": "string",
              "description": "Owner user ID"
            },
            "title": {
              "type": "string",
              "description": "Task title"
            },
            "description": {
              "type": "string",
              "nullable": true,
              "description": "Task description (may be null)"
            },
            "completed": {
              "type": "boolean",
              "description": "Completion status"
            },
            "created_at": {
              "type": "string",
              "format": "date-time",
              "description": "Creation timestamp (ISO 8601)"
            },
            "updated_at": {
              "type": "string",
              "format": "date-time",
              "description": "Last modification timestamp (ISO 8601)"
            }
          },
          "required": ["id", "user_id", "title", "completed", "created_at", "updated_at"]
        },
        "description": "Array of task objects"
      },
      "count": {
        "type": "integer",
        "description": "Total number of tasks returned"
      }
    },
    "required": ["tasks", "count"]
  },
  "errorSchema": {
    "type": "object",
    "properties": {
      "detail": {
        "type": "string",
        "description": "Human-readable error message"
      },
      "code": {
        "type": "string",
        "enum": [
          "INVALID_USER_ID",
          "INVALID_PARAMETER",
          "DATABASE_ERROR"
        ],
        "description": "Machine-readable error code"
      },
      "field": {
        "type": "string",
        "description": "Field name that caused the error (optional)"
      }
    },
    "required": ["detail", "code"]
  },
  "examples": [
    {
      "name": "List all tasks",
      "input": {
        "user_id": "ba_user_abc123",
        "status": "all"
      },
      "output": {
        "tasks": [
          {
            "id": 1,
            "user_id": "ba_user_abc123",
            "title": "Buy groceries",
            "description": "Milk, eggs, bread",
            "completed": false,
            "created_at": "2025-12-17T10:00:00Z",
            "updated_at": "2025-12-17T10:00:00Z"
          },
          {
            "id": 2,
            "user_id": "ba_user_abc123",
            "title": "Call mom",
            "description": null,
            "completed": true,
            "created_at": "2025-12-17T09:00:00Z",
            "updated_at": "2025-12-17T09:30:00Z"
          }
        ],
        "count": 2
      }
    },
    {
      "name": "List pending tasks only",
      "input": {
        "user_id": "ba_user_abc123",
        "status": "pending"
      },
      "output": {
        "tasks": [
          {
            "id": 1,
            "user_id": "ba_user_abc123",
            "title": "Buy groceries",
            "description": "Milk, eggs, bread",
            "completed": false,
            "created_at": "2025-12-17T10:00:00Z",
            "updated_at": "2025-12-17T10:00:00Z"
          }
        ],
        "count": 1
      }
    },
    {
      "name": "Error: Invalid status",
      "input": {
        "user_id": "ba_user_abc123",
        "status": "unknown"
      },
      "error": {
        "detail": "Status must be 'all', 'pending', or 'completed'",
        "code": "INVALID_PARAMETER",
        "field": "status"
      }
    }
  ]
}
